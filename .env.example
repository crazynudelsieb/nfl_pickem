# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_CONFIG=development  # Options: development, production, testing
FLASK_DEBUG=True

# Database Configuration
# Option 1: Full connection string (overrides individual settings below)
DATABASE_URL=postgresql+psycopg://nfl_user:nfl_password@localhost:5432/nfl_pickem_db

# Option 2: Individual database settings (used if DATABASE_URL is not set)
DB_TYPE=postgresql  # Options: postgresql, sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nfl_pickem_db
DB_USER=nfl_user
DB_PASSWORD=nfl_password

# Security - Auto-generated if not set (but recommended to set explicitly)
# Generate with: python3 generate_secrets.py
# Or manually: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=
WTF_CSRF_SECRET_KEY=

# Admin Configuration
# Set a strong password for the default admin account created on first startup
DEFAULT_ADMIN_PASSWORD=

# Development Notes:
# - If keys are empty, secure keys will be auto-generated with warnings
# - Auto-generated keys cause sessions to reset on app restart
# - For production, always set explicit keys
# - DEFAULT_ADMIN_PASSWORD is required for secure production deployments

# Email Configuration (for invitations and notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Email sender settings
FROM_EMAIL=nfl-pickem@yourdomain.com  # Defaults to MAIL_USERNAME if not set
FROM_NAME=NFL Pick'em  # Display name for emails
MAIL_DEFAULT_SENDER=nfl-pickem@yourdomain.com  # Flask-Mail default sender

# API Configuration
NFL_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/football/nfl

# Application Settings
ITEMS_PER_PAGE=20
SESSION_TIMEOUT=3600
INVITE_TOKEN_EXPIRY=168  # hours (1 week)
TIMEZONE=Europe/Vienna  # Application timezone (e.g., Europe/Vienna, America/New_York, UTC)

# Caching Configuration
CACHE_TYPE=RedisCache
CACHE_DEFAULT_TIMEOUT=300
CACHE_REDIS_URL=redis://localhost:6379/0

# Performance Monitoring
SLOW_QUERY_THRESHOLD=1.0
SLOW_REQUEST_THRESHOLD=2.0
SLOW_FUNCTION_THRESHOLD=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_CONSOLE=True
LOG_TO_FILE=True
LOG_DIR=logs

# Scheduler Configuration
SCHEDULER_ENABLED=True